/**index.wxss**/
page{
  height: 100%;
}
swiper{
  height: 650rpx;
  margin: 0 20rpx;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0rpx 5rpx 20rpx -5rpx #DDD;
  box-shadow: 0rpx -5rpx 20rpx 5rpx #DDD;
}
swiper-item image{
  width: 100%;
}
.slide-image{
 border-radius: 10rpx;
}

.movie{
  margin-top: 40rpx;
  padding: 0 15rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  padding-bottom: 30rpx;
  padding-top: 30rpx;
  display: flex;
  border-bottom: 1px solid #edece8;
  border-radius: 10px;
  box-shadow: 0rpx 5rpx 20rpx -5rpx #DDD;
  box-shadow: 0rpx -5rpx 20rpx 5rpx #DDD;
  position: relative;
}
.movie-pic image{
  width: 200rpx;
  height: 250rpx;
  vertical-align: top;
  border-radius: 10rpx;
}
.movie-info{
  padding-left: 20rpx;
}
.info-title{
  font-size: 30rpx;
  line-height: 30rpx
}
.info-content{
  font-size: 24rpx;
  color: #2e2b2b;
  line-height: 28rpx;

}
.rating{
  color: rgb(248, 137, 34);
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}