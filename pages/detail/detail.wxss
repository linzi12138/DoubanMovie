  color: #fff;
  background-color: rgba(68, 68, 68, 0.164);
}

.movieDetail {
  width: 100%rpx;
  height: 80rpx;
  display: block;
  font-size: 34rpx;
}

.detailText {
  width: 100vm;
  font-size: 32rpx;
  padding: 40rpx;
