.blur {
  position: absolute;
  background-repeat: no-repeat;
  background-size: cover;
  height: 500rpx;
  width: 100%;
  z-index: -999;
  filter: blur(20px) brightness(0.8);   
}

.detailHeader {
  display: flex;
}

.detailTitle text:first-child {
  font-size: 34rpx;
}

.detailTitle {
  padding-top: 60rpx;
  font-size: 22rpx;
}

.detailTitle text {
  display: block;
  margin-top: 20rpx;
  color: #fff;
}

.detailPic {
  height: 300rpx;
  width: 230rpx;
  margin: 40rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.detailPic image {
  height: 300rpx;
  width: 230rpx;
  vertical-align: top;
}

.detailBtn {
  display: flex;
  justify-content: center;
}

.btn1 {
  width: 320rpx;
  height: 60rpx;
  font-size: 24rpx;
  font-weight: bold;
  margin: 20rpx;
  color: #fff;
  background-color: rgba(68, 68, 68, 0.164);
}

.btn2 {
  width: 320rpx;
  height: 60rpx;
  font-size: 24rpx;
  font-weight: bold;
